                                            Margin="0, 0, 5, 0"
                                            HorizontalAlignment="Left"
                                            Width="120" Height="25"
                                            Click="ExtractFileButton_Click">
                                        <StackPanel Orientation="Horizontal">
                                            <iconPacks:PackIconMaterial Kind="Export"
                                                                        Width="Auto"
                                                                        Height="Auto"
                                                                        Margin="0, 5, 5, 5"/>
                                            <TextBlock Text="Extract File"
                                                       VerticalAlignment="Center"/>
