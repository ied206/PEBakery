<Window x:Class="PEBakery.WPF.ScriptEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PEBakery.WPF"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:custom="clr-namespace:PEBakery.WPF.Controls"
        mc:Ignorable="d"
        Title="Edit Script"
        FontFamily="Segoe UI"
        FontSize="13"
        Closing="Window_Closing"
        Closed="Window_Closed"
        Width="900" Height="720"
        MinWidth="640" MinHeight="480"
        d:DataContext="{d:DesignInstance Type=local:ScriptEditViewModel}">
    <Window.Resources>
        <local:IndexToBooleanConverter x:Key="IndexToBooleanConverter" />
    </Window.Resources>
    <Window.CommandBindings>
        <CommandBinding Command="ApplicationCommands.Save"
                        Executed="ScriptMain_Executed"
                        CanExecute="ScriptMain_CanExecute"/>
    </Window.CommandBindings>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>
        <TabControl Grid.Row="0"
                    SelectedIndex="{Binding TabIndex}">
            <TabItem Header="General">
                <StackPanel Margin="10, 0, 10, 10">
                    <GroupBox Header="Header"
                              BorderBrush="Gray">
                        <Grid Margin="5, 5, 5, 5">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="130"/>
                                <RowDefinition Height="25"/>
                            </Grid.RowDefinitions>

                            <!-- Main Description -->
                            <Grid Grid.Row="0"
                                  Margin="5, 0, 5, 5">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="25"/>
                                    <RowDefinition Height="25"/>
                                    <RowDefinition Height="25"/>
                                    <RowDefinition Height="25"/>
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="90"/>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="90"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Title -->
                                <TextBlock Grid.Row="0" Grid.Column="0"
                                           Margin="0, 0, 5, 0"
                                           Text="Title"
                                           HorizontalAlignment="Right"
                                           VerticalAlignment="Center"
                                           FontWeight="Bold"/>
                                <TextBox Grid.Row="0" Grid.Column="1"
                                         VerticalAlignment="Center"
                                         Text="{Binding ScriptTitle}"/>

                                <!-- Author -->
                                <TextBlock Grid.Row="1" Grid.Column="0"
                                           Margin="0, 0, 5, 0"
                                           Text="Author"
                                           HorizontalAlignment="Right"
                                           VerticalAlignment="Center"
                                           FontWeight="Bold"/>
                                <TextBox Grid.Row="1" Grid.Column="1"
                                         VerticalAlignment="Center"
                                         Text="{Binding ScriptAuthor}"/>

                                <!-- Description -->
                                <TextBlock Grid.Row="2" Grid.Column="0"
                                           Margin="0, 0, 5, 0"
                                           HorizontalAlignment="Right"
                                           VerticalAlignment="Center"
                                           FontWeight="Bold"
                                           Text="Description"/>
                                <TextBox Grid.Row="2" Grid.Column="1"
                                         Grid.RowSpan="3"
                                         Height="70"
                                         Text="{Binding ScriptDescription, Mode=TwoWay}"
                                         TextWrapping="Wrap"
                                         AcceptsReturn="True"
                                         VerticalAlignment="Center"/>

                                <!-- Version -->
                                <TextBlock Grid.Row="0" Grid.Column="2"
                                           Margin="0, 0, 5, 0"
                                           Text="Version"
                                           HorizontalAlignment="Right"
                                           VerticalAlignment="Center"
                                           FontWeight="Bold"/>
                                <TextBox Grid.Row="0" Grid.Column="3"
                                         VerticalAlignment="Center"
                                         Text="{Binding ScriptVersion}"/>

                                <!-- Date -->
                                <TextBlock Grid.Row="1" Grid.Column="2"
                                           Margin="0, 0, 5, 0"
                                           Text="Date"
                                           HorizontalAlignment="Right"
                                           VerticalAlignment="Center"
                                           FontWeight="Bold"/>
                                <TextBox Grid.Row="1" Grid.Column="3"
                                         VerticalAlignment="Center"
                                         Text="{Binding ScriptDate}"/>

                                <!-- Level -->
                                <TextBlock Grid.Row="2" Grid.Column="2"
                                           Margin="0, 0, 5, 0"
                                           HorizontalAlignment="Right"
                                           VerticalAlignment="Center"
                                           FontWeight="Bold"
                                           Text="Level"/>
                                <custom:NumberBox Grid.Row="2" Grid.Column="3"
                                                      x:Name="ScriptLevel"
                                                      VerticalAlignment="Center"
                                                      Minimum="-256"
                                                      Maximum="255"
                                                      IncrementUnit="1"
                                                      Value="{Binding ScriptLevel, Mode=TwoWay}"/>

                                <!-- Selected -->
                                <TextBlock Grid.Row="3" Grid.Column="2"
                                           Margin="0, 0, 5, 0"
                                           Text="Selected"
                                           HorizontalAlignment="Right"
                                           VerticalAlignment="Center"
                                           FontWeight="Bold"/>
                                <CheckBox Grid.Row="3" Grid.Column="3"
                                          IsThreeState="True"
                                          IsChecked="{Binding ScriptSelected}"
                                          VerticalAlignment="Center"/>
                                <!-- Mandatory -->
                                <TextBlock Grid.Row="4" Grid.Column="2"
                                           Margin="0, 0, 5, 0"
                                           Text="Mandatory"
                                           HorizontalAlignment="Right"
                                           VerticalAlignment="Center"
                                           FontWeight="Bold"/>
                                <CheckBox Grid.Row="4" Grid.Column="3" 
                                          IsChecked="{Binding ScriptMandatory}"
                                          VerticalAlignment="Center"/>
                            </Grid>
                            <Button Grid.Row="1"
                                    Width="100"
                                    Content="Save"
                                    x:Name="MainSaveButton"
                                    Click="MainSaveButton_Click"
                                    HorizontalAlignment="Right">
                                <Button.InputBindings>
                                    <KeyBinding Key="S"
                                                Modifiers="Ctrl" 
                                                Command="ApplicationCommands.Save" />
                                </Button.InputBindings>
                            </Button>
                        </Grid>
                    </GroupBox>
                    <GroupBox Header="Logo"
                              BorderBrush="Gray">
                    
                        <!-- Script Logo -->
                        <Grid Height="100"
                              Margin="3, 0, 5, 0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="100"/>
                            </Grid.ColumnDefinitions>

                            <Image x:Name="ScriptLogoImage"
                                   Grid.Row="0" Grid.Column="0"
                                   Width="90" Height="90"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   StretchDirection="DownOnly"
                                   Stretch="Uniform"
                                   UseLayoutRounding="True"
                                   Visibility="{Binding ScriptLogoImageVisible}"
                                   Source="{Binding ScriptLogoImage}"
                                   ToolTip="Recommended image size : 80x80"/>
                            <iconPacks:PackIconMaterial x:Name="ScriptLogoIcon"
                                                        Grid.Row="0" Grid.Column="0"
                                                        Width="60" Height="60"
                                                        Foreground="#60000000"
                                                        VerticalAlignment="Center"
                                                        HorizontalAlignment="Center"
                                                        UseLayoutRounding="True"
                                                        Visibility="{Binding ScriptLogoNoneIconVisible}"
                                                        Kind="BorderNone"
                                                        ToolTip="Recommended image size : 80x80"/>
                            <Grid Grid.Row="0" Grid.Column="1"
                                  Height="80"
                                  Visibility="{Binding ScriptLogoInfoVisibility}">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="20"/>
                                    <RowDefinition Height="20"/>
                                    <RowDefinition Height="20"/>
                                    <RowDefinition Height="20"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="110"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Name -->
                                <TextBlock Grid.Row="0" Grid.Column="0"
                                           Margin="0, 0, 10, 0"
                                           Text="Name"
                                           HorizontalAlignment="Right"
                                           VerticalAlignment="Center"
                                           FontWeight="Bold"/>
                                <TextBlock Grid.Row="0" Grid.Column="1"
                                           VerticalAlignment="Center"
                                           Text="{Binding ScriptLogoName}"/>

                                <!-- Raw Size -->
                                <TextBlock Grid.Row="1" Grid.Column="0"
                                           Margin="0, 0, 10, 0"
                                           Text="Raw Size"
                                           HorizontalAlignment="Right"
                                           VerticalAlignment="Center"
                                           FontWeight="Bold"/>
                                <TextBlock Grid.Row="1" Grid.Column="1"
                                           VerticalAlignment="Center"
                                           Text="{Binding ScriptLogoRawSize}"/>

                                <!-- Encoded Size -->
                                <TextBlock Grid.Row="2" Grid.Column="0"
                                           Margin="0, 0, 10, 0"
                                           Text="Encoded Size"
                                           HorizontalAlignment="Right"
                                           VerticalAlignment="Center"
                                           FontWeight="Bold"/>
                                <TextBlock Grid.Row="2" Grid.Column="1"
                                           VerticalAlignment="Center"
                                           Text="{Binding ScriptLogoEncodedSize}"/>

                                <!-- Compression -->
                                <TextBlock Grid.Row="3" Grid.Column="0"
                                           Margin="0, 0, 10, 0"
                                           Text="Compression"
                                           HorizontalAlignment="Right"
                                           VerticalAlignment="Center"
                                           FontWeight="Bold"/>
                                <TextBlock Grid.Row="3" Grid.Column="1"
                                           VerticalAlignment="Center"
                                           Text="{Binding ScriptLogoCompression}"/>
                            </Grid>
                            <StackPanel Grid.Row="0" Grid.Column="2"
                                        Orientation="Vertical"
                                        VerticalAlignment="Center">
                                <Button Width="100" Height="25"
                                        Margin="0, 0, 0, 5"
                                        x:Name="ScriptLogoAttachButton"
                                        Click="ScriptLogoAttachButton_Click"
                                        ToolTip="Import logo from image">
                                    <StackPanel Orientation="Horizontal">
                                        <iconPacks:PackIconMaterial Kind="ArrowExpandLeft"
                                                                    Width="Auto"
                                                                    Height="Auto"
                                                                    Margin="0, 5, 5, 5"/>
                                        <TextBlock Text="Import"
                                                   VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>
                                <Button Width="100" Height="25"
                                        Margin="0, 0, 0, 5"
                                        x:Name="ScriptLogoExtractButton"
                                        Click="ScriptLogoExtractButton_Click"
                                        IsEnabled="{Binding ScriptLogoLoaded}"
                                        ToolTip="Export logo to image">
                                    <StackPanel Orientation="Horizontal">
                                        <iconPacks:PackIconMaterial Kind="ArrowExpandRight"
                                                                    Width="Auto"
                                                                    Height="Auto"
                                                                    Margin="0, 5, 5, 5"/>
                                        <TextBlock Text="Extract"
                                                   VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>
                                <Button Width="100" Height="25"
                                        x:Name="ScriptLogoDeleteButton"
                                        Click="ScriptLogoDeleteButton_Click"
                                        IsEnabled="{Binding ScriptLogoLoaded}"
                                        ToolTip="Delete logo">
                                    <StackPanel Orientation="Horizontal">
                                        <iconPacks:PackIconMaterial Kind="Close"
                                                                    Width="Auto"
                                                                    Height="Auto"
                                                                    Margin="0, 5, 5, 5"/>
                                        <TextBlock Text="Delete"
                                                   VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </GroupBox>
                </StackPanel>
            </TabItem>
            <TabItem Header="Interface">
                <Grid Margin="10, 10, 10, 10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="0"
                          Margin="0, 0, 10, 0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="100"/>
                            <RowDefinition />
                        </Grid.RowDefinitions>

                        <GroupBox Grid.Row="0"
                                  Header="Add"
                                  BorderBrush="Gray">
                            <Grid Margin="3, 0, 3, 0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="20"/>
                                    <RowDefinition Height="20"/>
                                    <RowDefinition Height="30"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="60" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0"
                                           VerticalAlignment="Center"
                                           Margin="0, 0, 5, 0"
                                           Text="Type" />
                                <ComboBox Grid.Row="0" Grid.Column="1"
                                          VerticalContentAlignment="Center"
                                          Padding="3, 1, 3, 1"
                                          x:Name="UICtrlAddType"
                                          SelectionChanged="UICtrlAddType_SelectionChanged"
                                          SelectedIndex="{Binding UICtrlAddTypeIndex}">
                                    <ComboBoxItem Content="TextBox"/>
                                    <ComboBoxItem Content="TextBlock"/>
                                    <ComboBoxItem Content="NumberBox"/>
                                    <ComboBoxItem Content="CheckBox"/>
                                    <ComboBoxItem Content="ComboBox"/>
                                    <ComboBoxItem Content="Image"/>
                                    <ComboBoxItem Content="TextFile"/>
                                    <ComboBoxItem Content="Button"/>
                                    <ComboBoxItem Content="WebLabel"/>
                                    <ComboBoxItem Content="RadioButton"/>
                                    <ComboBoxItem Content="Bevel"/>
                                    <ComboBoxItem Content="FileBox"/>
                                    <ComboBoxItem Content="RadioGroup"/>
                                </ComboBox>
                                <TextBlock Grid.Row="1" Grid.Column="0"
                                           VerticalAlignment="Center"
                                           Margin="0, 0, 5, 0"
                                           Text="Name" />
                                <TextBox Grid.Row="1" Grid.Column="1"
                                         VerticalContentAlignment="Center"
                                         Text="{Binding UICtrlAddName}"/>
                                <Button Grid.Row="2" Grid.Column="1"
                                        Margin="0, 5, 0, 0"
                                        x:Name="UICtrlAddButton"
                                        Click="UICtrlAddButton_Click"
                                        IsEnabled="{Binding ElementName=UICtrlAddType, Path=SelectedIndex, Converter={StaticResource IndexToBooleanConverter}}">
                                    <StackPanel Orientation="Horizontal">
                                        <iconPacks:PackIconMaterial Kind="Plus"
                                                                    Width="Auto"
                                                                    Height="Auto"
                                                                    Margin="0, 5, 5, 5"/>
                                        <TextBlock Text="Add" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>
                            </Grid>
                        </GroupBox>
                        <GroupBox Grid.Row="1"
                                  Header="Edit"
                                  BorderBrush="Gray">
                            <ScrollViewer HorizontalScrollBarVisibility="Disabled"
                                          VerticalScrollBarVisibility="Auto">
                                <StackPanel Margin="5, 5, 5, 5" Orientation="Vertical">
                                    <ComboBox IsEnabled="{Binding InterfaceLoaded}"
                                              SelectedIndex="{Binding InterfaceUICtrlIndex}"
                                              ItemsSource="{Binding InterfaceUICtrls}"
                                              SelectionChanged="UIControlComboBox_SelectionChanged"/>
                                    <!-- Common -->
                                    <Grid Margin="0, 10, 0, 0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="60" />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <!-- <RowDefinition Height="20" /> -->
                                            <RowDefinition Height="0" />
                                            <RowDefinition Height="20" />
                                            <RowDefinition Height="20" />
                                            <RowDefinition Height="20" />
                                            <RowDefinition Height="20" />
                                            <RowDefinition Height="20" />
                                            <RowDefinition Height="20" />
                                        </Grid.RowDefinitions>

                                        <!--
                                        <TextBlock Grid.Row="0" Grid.Column="0"
                                                   Margin="0, 0, 5, 0"
                                                   FontWeight="Bold"
                                                   Text="Key" />
                                        <TextBox Grid.Row="0" Grid.Column="1"
                                                 IsEnabled="{Binding UICtrlEditEnabled}"
                                                 Text="{Binding UICtrlKey}"/>
                                        -->
                                        <TextBlock Grid.Row="1" Grid.Column="0"
                                                   Margin="0, 0, 5, 0"
                                                   Text="Visible" />
                                        <CheckBox Grid.Row="1" Grid.Column="1"
                                                  VerticalContentAlignment="Center"
                                                  IsEnabled="{Binding UICtrlEditEnabled}"
                                                  IsChecked="{Binding UICtrlVisible}"/>
                                        <TextBlock Grid.Row="2" Grid.Column="0"
                                                   Margin="0, 0, 5, 0"
                                                   Text="X" />
                                        <custom:NumberBox Grid.Row="2" Grid.Column="1"
                                                          Minimum="0"
                                                          IsEnabled="{Binding UICtrlEditEnabled}"
                                                          Value="{Binding UICtrlX, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                        <TextBlock Grid.Row="3" Grid.Column="0"
                                                   Margin="0, 0, 5, 0"
                                                   Text="Y"/>
                                        <custom:NumberBox Grid.Row="3" Grid.Column="1"
                                                          Minimum="0"
                                                          IsEnabled="{Binding UICtrlEditEnabled}"
                                                          Value="{Binding UICtrlY, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                        <TextBlock Grid.Row="4" Grid.Column="0"
                                                   Margin="0, 0, 5, 0"
                                                   Text="Width"/>
                                        <custom:NumberBox Grid.Row="4" Grid.Column="1"
                                                          Minimum="0"
                                                          IsEnabled="{Binding UICtrlEditEnabled}"
                                                          Value="{Binding UICtrlWidth, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                        <TextBlock Grid.Row="5" Grid.Column="0"
                                                   Margin="0, 0, 5, 0"
                                                   Text="Height" />
                                        <custom:NumberBox Grid.Row="5" Grid.Column="1"
                                                          Minimum="0"
                                                          IsEnabled="{Binding UICtrlEditEnabled}"
                                                          Value="{Binding UICtrlHeight, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                        <TextBlock Grid.Row="6" Grid.Column="0"
                                                   Margin="0, 0, 5, 0"
                                                   Text="ToolTip" />
                                        <TextBox Grid.Row="6" Grid.Column="1"
                                                 IsEnabled="{Binding UICtrlEditEnabled}"
                                                 Text="{Binding UICtrlToolTip, UpdateSourceTrigger=PropertyChanged}"/>
                                    </Grid>
                                    <!-- TextBox -->
                                    <Grid Visibility="{Binding IsUICtrlTextBox}" Margin="0, 10, 0, 0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="60" />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="20" />
                                            <RowDefinition Height="20" />
                                        </Grid.RowDefinitions>
                                        <TextBlock Grid.Row="0" Grid.Column="0"
                                                   Margin="0, 0, 5, 0"
                                                   Text="Caption" />
                                        <TextBox Grid.Row="0" Grid.Column="1"
                                                 VerticalContentAlignment="Center"
                                                 Text="{Binding UICtrlText, UpdateSourceTrigger=PropertyChanged}"/>
                                        <TextBlock Grid.Row="1" Grid.Column="0"
                                                   Margin="0, 0, 5, 0"
                                                   Text="Value" />
                                        <TextBox Grid.Row="1" Grid.Column="1"
                                                 VerticalContentAlignment="Center"
                                                 Text="{Binding UICtrlTextBoxValue, UpdateSourceTrigger=PropertyChanged}"/>
                                    </Grid>
                                    <!-- TextLabel -->
                                    <Grid Visibility="{Binding IsUICtrlTextLabel}" Margin="0, 10, 0, 0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="60" />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="20" />
                                            <RowDefinition Height="20" />
                                            <RowDefinition Height="20" />
                                            <RowDefinition Height="20" />
                                        </Grid.RowDefinitions>
                                        <TextBlock Grid.Row="0" Grid.Column="0"
                                                   Margin="0, 0, 5, 0"
                                                   Text="Caption" />
                                        <TextBox Grid.Row="0" Grid.Column="1"
                                                 VerticalContentAlignment="Center"
                                                 Text="{Binding UICtrlText, UpdateSourceTrigger=PropertyChanged}"/>
                                        <TextBlock Grid.Row="1" Grid.Column="0"
                                                   Margin="0, 0, 5, 0"
                                                   Text="FontSize" />
                                        <custom:NumberBox Grid.Row="1" Grid.Column="1"
                                                          Minimum="0"
                                                          IncrementUnit="1"
                                                          Value="{Binding UICtrlTextLabelFontSize, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                        <TextBlock Grid.Row="2" Grid.Column="0"
                                                   Margin="0, 0, 5, 0"
                                                   Text="Weight" />
                                        <ComboBox Grid.Row="2" Grid.Column="1"
                                                  Padding="3, 0, 3, 0"
                                                  VerticalContentAlignment="Center"
                                                  SelectedIndex="{Binding UICtrlTextLabelFontWeightIndex, UpdateSourceTrigger=PropertyChanged}">
                                            <ComboBoxItem Content="Normal"/>
                                            <ComboBoxItem Content="Bold"/>
                                        </ComboBox>
                                        <TextBlock Grid.Row="3" Grid.Column="0"
                                                   Margin="0, 0, 5, 0"
                                                   Text="Style" />
                                        <ComboBox Grid.Row="3" Grid.Column="1"
                                                  Padding="3, 0, 3, 0"
                                                  VerticalContentAlignment="Center"
                                                  SelectedIndex="{Binding UICtrlTextLabelFontStyleIndex, UpdateSourceTrigger=PropertyChanged}">
                                            <ComboBoxItem Content="None"/>
                                            <ComboBoxItem Content="Italic"/>
                                            <ComboBoxItem Content="Underline"/>
                                            <ComboBoxItem Content="Strike"/>
                                        </ComboBox>
                                    </Grid>
                                    <!-- NumberBox -->
                                    <Grid Visibility="{Binding IsUICtrlNumberBox}" Margin="0, 10, 0, 0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="60" />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="20" />
                                            <RowDefinition Height="20" />
                                            <RowDefinition Height="20" />
                                            <RowDefinition Height="20" />
                                        </Grid.RowDefinitions>
                                        <TextBlock Grid.Row="0" Grid.Column="0"
                                                   Margin="0, 0, 5, 0"
                                                   Text="Value" />
                                        <custom:NumberBox Grid.Row="0" Grid.Column="1"
                                                          Minimum="0"
                                                          Value="{Binding UICtrlNumberBoxValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                        <TextBlock Grid.Row="1" Grid.Column="0"
                                                   Margin="0, 0, 5, 0"
                                                   Text="Min" />
                                        <custom:NumberBox Grid.Row="1" Grid.Column="1"
                                                          Minimum="0"
                                                          Value="{Binding UICtrlNumberBoxMin, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                        <TextBlock Grid.Row="2" Grid.Column="0"
                                                   Margin="0, 0, 5, 0"
                                                   Text="Max" />
                                        <custom:NumberBox Grid.Row="2" Grid.Column="1"
                                                          Minimum="0"
                                                          Value="{Binding UICtrlNumberBoxMax, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                        <TextBlock Grid.Row="3" Grid.Column="0"
                                                   Margin="0, 0, 5, 0"
                                                   Text="Tick" />
                                        <custom:NumberBox Grid.Row="3" Grid.Column="1"
                                                          Minimum="1"
                                                          Value="{Binding UICtrlNumberBoxTick, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                    </Grid>
                                    <!-- CheckBox -->
                                    <Grid Visibility="{Binding IsUICtrlCheckBox}" Margin="0, 10, 0, 0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="60" />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="20" />
                                            <RowDefinition Height="20" />
                                        </Grid.RowDefinitions>
                                        <TextBlock Grid.Row="0" Grid.Column="0"
                                                   Margin="0, 0, 5, 0"
                                                   Text="Caption" />
                                        <TextBox Grid.Row="0" Grid.Column="1"
                                                 VerticalContentAlignment="Center"
                                                 Text="{Binding UICtrlText, UpdateSourceTrigger=PropertyChanged}"/>
                                        <TextBlock Grid.Row="1" Grid.Column="0"
                                                   Margin="0, 0, 5, 0"
                                                   Text="Value" />
                                        <CheckBox Grid.Row="1" Grid.Column="1"
                                                  VerticalContentAlignment="Center"
                                                  IsChecked="{Binding UICtrlCheckBoxValue}"/>
                                    </Grid>
                                    <!-- ComboBox -> See ListItemBox -->
                                    <!-- Image -->
                                    <Grid Visibility="{Binding IsUICtrlImage}" Margin="0, 10, 0, 0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="60" />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition />
                                            <RowDefinition Height="20" />
                                        </Grid.RowDefinitions>
                                        <TextBlock Grid.Row="0" Grid.Column="0"
                                                   Margin="0, 0, 5, 0"
                                                   Text="Image" />
                                        <Button Grid.Row="0" Grid.Column="1"
                                                Visibility="{Binding UICtrlImageUnloaded}"
                                                Width="Auto" Height="25"
                                                x:Name="UICtrlImageAttachButton"
                                                Click="UICtrlInterfaceAttachButton_Click"
                                                ToolTip="Import image">
                                            <StackPanel Orientation="Horizontal">
                                                <iconPacks:PackIconMaterial Kind="ArrowExpandLeft" Width="Auto" Height="Auto" Margin="3"/>
                                                <TextBlock Text="Import"
                                                           Margin="5, 0, 0, 0"
                                                           VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </Button>
                                        <StackPanel Grid.Row="0" Grid.Column="1"
                                                    Visibility="{Binding UICtrlImageLoaded}"
                                                    Orientation="Vertical">
                                            <Button Width="Auto" Height="25"
                                                    x:Name="UICtrlImageExtractButton"
                                                    Click="UICtrlInterfaceExtractButton_Click"
                                                    ToolTip="Export image">
                                                <StackPanel Orientation="Horizontal">
                                                    <iconPacks:PackIconMaterial Kind="ArrowExpandRight" Width="Auto" Height="Auto" Margin="3"/>
                                                    <TextBlock Text="Extract"
                                                               Margin="5, 0, 0, 0"
                                                               VerticalAlignment="Center"/>
                                                </StackPanel>
                                            </Button>
