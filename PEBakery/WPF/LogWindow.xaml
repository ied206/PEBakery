<Window x:Class="PEBakery.WPF.LogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:local="clr-namespace:PEBakery.WPF"
        xmlns:cc="clr-namespace:PEBakery.WPF.Controls"
        mc:Ignorable="d"
        FontFamily="Segoe UI"
        Closed="Window_Closed"
        PreviewKeyDown="Window_PreviewKeyDown"
        Title="PEBakery Log Viewer"
        Width="900" Height="640"
        MinWidth="640" MinHeight="480"
        WindowStartupLocation="CenterOwner"
        d:DataContext="{d:DesignInstance Type=local:LogViewModel}">
    <Window.Resources>
        <Style TargetType="ListViewItem">
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
        </Style>
        <Style x:Key="AlternativeListViewColor" TargetType="{x:Type ListViewItem}">
            <Style.Triggers>
                <Trigger Property="ItemsControl.AlternationIndex" Value="0">
                    <Setter Property="TextBlock.Foreground" Value="Black"></Setter>
                    <Setter Property="Background" Value="White"></Setter>
                </Trigger>
                <Trigger Property="ItemsControl.AlternationIndex" Value="1">
                    <Setter Property="TextBlock.Foreground" Value="Black"></Setter>
                    <Setter Property="Background" Value="#f2f2f2"></Setter>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="LightBlue"/>
                </Trigger>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="Background" Value="LightBlue"></Setter>
                </Trigger>
                
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>
        <TabControl Grid.Row="0"
                    Name="MainTab"
                    SelectedIndex="{Binding SelectedTabIndex}">
            <TabItem Header="System Log">
                <Grid>
                    <ListView Name="SystemLogListView"
                              HorizontalContentAlignment="Stretch"
                              SelectedIndex="{Binding SystemLogsSelectedIndex}"
                              ItemsSource="{Binding SystemLogs}"
                              ItemContainerStyle="{StaticResource AlternativeListViewColor}"
                              AlternationCount="2">
                        <ListView.View>
                            <cc:AutoSizedGridView>
                                <GridViewColumn Header="Time"
                                                Width="Auto"
                                                DisplayMemberBinding="{Binding TimeStr}" />
                                <GridViewColumn Header="State"
                                                Width="Auto"
                                                DisplayMemberBinding="{Binding StateStr}" />
                                <GridViewColumn Header="Message"
                                                Width="Auto"
                                                DisplayMemberBinding="{Binding Message}" />
                            </cc:AutoSizedGridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </TabItem>
            <TabItem Header="Build Log">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <DockPanel Margin="15, 15, 15, 0"
                               Grid.Row="0">
                        <TextBlock DockPanel.Dock="Left"
                                   Width="100"
                                   Margin="0, 0, 15, 0"
                                   VerticalAlignment="Center"
                                   Text="Select Build">
                        </TextBlock>
                        <ComboBox Name="SelectBuildComboBox"
                                  SelectedIndex="{Binding SelectedBuildIndex}"
                                  ItemsSource="{Binding BuildEntries}">
                             <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Item1}"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </DockPanel>

                    <DockPanel Margin="15, 15, 15, 0"
                               Grid.Row="1">
                        <TextBlock DockPanel.Dock="Left"
                                   Width="100"
                                   Margin="0, 0, 15, 0"
                                   VerticalAlignment="Center"
                                   Text="Select Script">
                        </TextBlock>
                         <ComboBox Name="SelectScriptComboBox"
                                   SelectedIndex="{Binding SelectedScriptIndex}"
                                   ItemsSource="{Binding ScriptEntries}">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Item1}"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </DockPanel>

                    <TabControl Margin="15, 15, 15, 0"
                                Grid.Row="2">
                        <TabItem Header="Statistics">
                            <ListView HorizontalContentAlignment="Stretch"
                                      ItemsSource="{Binding LogStats}"
                                      ItemContainerStyle="{StaticResource AlternativeListViewColor}"
                                      AlternationCount="2">
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn Header="Type"
                                                        Width="70"
                                                        DisplayMemberBinding="{Binding Item1}" />
                                        <GridViewColumn Header="Count"
                                                        Width="160"
                                                        DisplayMemberBinding="{Binding Item2}" />
                                    </GridView>
                                </ListView.View>
                            </ListView>
                        </TabItem>
                        <TabItem Header="Simple Logs">
                            <ListView Name="BuildLogSimpleListView"
                                      SelectedIndex="{Binding SimpleBuildLogSelectedIndex}"
                                      HorizontalContentAlignment="Stretch"
                                      ItemsSource="{Binding BuildLogs}"
                                      ItemContainerStyle="{StaticResource AlternativeListViewColor}"
                                      AlternationCount="2">
                                 <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Text}"/>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                                <ListView.ContextMenu>
                                    <ContextMenu>
                                        <cc:CorrectMenuItem Header="Copy" Grid.IsSharedSizeScope="True" Click="SimpleLogViewCopy_Click">
                                            <cc:CorrectMenuItem.Icon>
                                                <iconPacks:PackIconMaterial Kind="ContentCopy"/>
                                            </cc:CorrectMenuItem.Icon>
                                        </cc:CorrectMenuItem>
                                    </ContextMenu>
                                </ListView.ContextMenu>
                            </ListView>
                        </TabItem>
                        <TabItem Header="Full Logs">
                            <ListView Name="BuildLogDetailListView"
                                      SelectedIndex="{Binding FullBuildLogSelectedIndex}"
                                      HorizontalContentAlignment="Stretch"
                                      ItemsSource="{Binding BuildLogs}"
                                      ItemContainerStyle="{StaticResource AlternativeListViewColor}"
                                      AlternationCount="2"
                                      FontSize="11">
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn Header="Time"
                                                        Width="135"
                                                        DisplayMemberBinding="{Binding TimeStr}" />
                                        <GridViewColumn Header="Depth"
                                                        Width="35"
                                                        DisplayMemberBinding="{Binding Depth}" />
                                        <GridViewColumn Header="State"
                                                        Width="55"
                                                        DisplayMemberBinding="{Binding StateStr}" />
                                        <GridViewColumn Header="Line#"
                                                        Width="40"
                                                        DisplayMemberBinding="{Binding LineIdxStr}" />
                                        <GridViewColumn Header="Message"
                                                        Width="340" 
                                                        DisplayMemberBinding="{Binding Message}" />
                                        <GridViewColumn Header="RawCode"
                                                        Width="175"
                                                        DisplayMemberBinding="{Binding RawCode}" />
                                        <GridViewColumn Header="Macro"
                                                        Width="35"
                                                        DisplayMemberBinding="{Binding IsMacroChar}" />
                                    </GridView>
                                </ListView.View>
                                <ListView.ContextMenu>
                                    <ContextMenu>
                                        <cc:CorrectMenuItem Header="Copy" Grid.IsSharedSizeScope="True" Click="FullLogViewCopy_Click">
                                            <cc:CorrectMenuItem.Icon>
                                                <iconPacks:PackIconMaterial Kind="ContentCopy"/>
                                            </cc:CorrectMenuItem.Icon>
                                        </cc:CorrectMenuItem>
                                    </ContextMenu>
                                </ListView.ContextMenu>
                            </ListView>
                        </TabItem>
                        <TabItem Header="Variables">
                            <ListView HorizontalContentAlignment="Stretch"
                                      SelectedIndex="{Binding VariableLogSelectedIndex}"
                                      ItemsSource="{Binding VariableLogs}"
                                      ItemContainerStyle="{StaticResource AlternativeListViewColor}"
                                      AlternationCount="2">
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn Header="Type"
                                                        Width="60"
                                                        DisplayMemberBinding="{Binding Type}" />
                                        <GridViewColumn Header="Key"
                                                        Width="160"
                                                        DisplayMemberBinding="{Binding Key}" />
                                        <GridViewColumn Header="Value"
                                                        Width="580"
                                                        DisplayMemberBinding="{Binding Value}" />
                                    </GridView>
                                </ListView.View>
                                <ListView.ContextMenu>
                                    <ContextMenu>
                                        <cc:CorrectMenuItem Header="Copy" Grid.IsSharedSizeScope="True" Click="VariableLogViewCopy_Click">
                                            <cc:CorrectMenuItem.Icon>
                                                <iconPacks:PackIconMaterial Kind="ContentCopy"/>
                                            </cc:CorrectMenuItem.Icon>
                                        </cc:CorrectMenuItem>
                                    </ContextMenu>
                                </ListView.ContextMenu>
                            </ListView>
                        </TabItem>
                    </TabControl>
                </Grid>
            </TabItem>
        </TabControl>
        <DockPanel Grid.Row="1" Margin="15">
            <Button DockPanel.Dock="Right"
                    Width="100"
                    Margin="10, 0, 0, 0"
                    IsDefault="True"
                    IsCancel="True"
                    Click="CloseButton_Click"
                    Content="Close"/>
            <Button DockPanel.Dock="Left"
                    HorizontalAlignment="Left"
                    Width="100"
                    Margin="0, 0, 10, 0"
                    Click="RefreshButton_Click"
                    Content="Refresh"/>
            <Button DockPanel.Dock="Left"
                    HorizontalAlignment="Left"
                    Width="100"
                    Margin="0, 0, 10, 0"
                    Click="ClearButton_Click"
                    Content="Clear"/>
            <Button DockPanel.Dock="Left"
                    HorizontalAlignment="Left"
                    Width="100"
                    Margin="0, 0, 10, 0"
                    Click="ExportButton_Click"
                    Content="Export"/>
            <StackPanel Orientation="Horizontal" 
                        Visibility="{Binding BuildLogSelected}">
                <CheckBox DockPanel.Dock="Left"
                          HorizontalAlignment="Left"
                          VerticalAlignment="Center"
                          VerticalContentAlignment="Center"
                          Margin="0, 0, 5, 0"
                          IsChecked="{Binding BuildLogShowComments}"
                          Content="Show Comments"/>
                <CheckBox DockPanel.Dock="Left"
                          HorizontalAlignment="Left"
                          VerticalAlignment="Center"
                          VerticalContentAlignment="Center"
                          Margin="0, 0, 5, 0"
                          IsChecked="{Binding BuildLogShowMacros}"
                          Content="Show Macros"/>
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>
