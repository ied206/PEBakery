<Window x:Class="PEBakery.WPF.UtilityWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PEBakery.WPF"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        mc:Ignorable="d"
        Title="Utility"
        FontFamily="Segoe UI"
        FontSize="13"
        Closed="Window_Closed"
        Width="800" Height="640"
        MinWidth="640" MinHeight="480"
        WindowStartupLocation="CenterOwner"
        d:DataContext="{d:DesignInstance Type=local:UtilityViewModel}">
    <Window.CommandBindings>
        <CommandBinding Command="ApplicationCommands.Save"
                        Executed="CodeBoxSave_Executed"
                        CanExecute="CodeBox_CanExecute"/>
        <CommandBinding Command="local:UtilityWindow.CodeBoxSaveCommand"
                        Executed="CodeBoxRun_Executed"
                        CanExecute="CodeBox_CanExecute"/>
    </Window.CommandBindings>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>
        <TabControl Grid.Row="0"
                    SelectedIndex="{Binding TabIndex}">
            <TabItem Header="CodeBox">
                <Grid Margin="10, 10, 10, 10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="22"/>
                        <RowDefinition Height="25"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="22"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                               VerticalAlignment="Center"
                               FontWeight="Bold"
                               Text="Environment">
                    </TextBlock>
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="100"/>
                        </Grid.ColumnDefinitions>

                        <ComboBox Grid.Column="0"
                                  SelectedIndex="{Binding CodeBox_SelectedProjectIndex}"
                                  ItemsSource="{Binding CodeBox_Projects}">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Item1}"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>

                        <Button Grid.Column="1"
                                x:Name="CodeBoxSaveButton"
                                Margin="10, 0, 0, 0"
                                Content="Save"
                                ToolTip="Ctrl + S"
                                Click="CodeBoxSaveButton_Click">
                            <Button.InputBindings>
                                <KeyBinding Key="S"
                                            Modifiers="Ctrl" 
                                            Command="ApplicationCommands.Save" />
                            </Button.InputBindings>
                        </Button>

                        <Button Grid.Column="2"
                                x:Name="CodeBoxRunButton"
                                Margin="10, 0, 0, 0"
                                Content="Run"
                                ToolTip="Ctrl + R"
                                Click="CodeBoxRunButton_Click">
                            <!-- "{x:Static local:UtilityWindow.CodeBoxSaveCommand}"> -->
                            <!--
                            <Button.InputBindings>
                                <KeyBinding Key="R"
                                            Modifiers="Ctrl" 
                                            Command="local:UtilityWindow.CodeBoxSaveCommand" />
                            </Button.InputBindings>
                            -->
                        </Button>
                    </Grid>

                    <TextBlock Grid.Row="3"
                               VerticalAlignment="Center"
                               FontWeight="Bold"
                               Text="Script Code">
                    </TextBlock>
                    <TextBox Grid.Row="4"
                             FontFamily="{Binding MonoFontFamily}"
                             FontWeight="{Binding MonoFontWeight}"
                             FontSize="{Binding MonoFontSize}"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             VerticalContentAlignment="Stretch"
                             ScrollViewer.HorizontalScrollBarVisibility="Auto"
                             ScrollViewer.VerticalScrollBarVisibility="Auto"
                             ScrollViewer.CanContentScroll="True"
                             Text="{Binding CodeBox_Input}">
                    </TextBox>
                </Grid>
            </TabItem>
            <TabItem Header="String Escaper">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition Height="50"></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" Margin="10, 10, 10, 10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="22"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0"
                                   VerticalAlignment="Center"
                                   FontWeight="Bold"
                                   Text="String to Convert">
                        </TextBlock>
                        <TextBox Grid.Row="1"
                                 FontFamily="{Binding MonoFontFamily}"
                                 FontWeight="{Binding MonoFontWeight}"
                                 FontSize="{Binding MonoFontSize}"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 VerticalContentAlignment="Stretch"
                                 ScrollViewer.HorizontalScrollBarVisibility="Auto"
                                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                                 ScrollViewer.CanContentScroll="True"
                                 Text="{Binding Escaper_StringToConvert}">
                        </TextBox>
                    </Grid>

                    <Grid Grid.Row="1" Margin="10, 10, 10, 10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="110"/>
                            <ColumnDefinition Width="110"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="200"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0"
                                Margin="0, 0, 10, 0"
                                Content="Escape"
                                Click="EscapeButton_Click"/>
                        <Button Grid.Column="1"
                                Margin="0, 0, 10, 0"
                                Content="Unescape"
                                Click="UnescapeButton_Click"/>
                        <StackPanel Grid.Column="2"
                                    Margin="0, 0, 10, 0"
                                    Orientation="Horizontal">
                            <CheckBox Margin="0, 0, 10, 0"
                                      VerticalAlignment="Center"
                                      Content="Escape %"
                                      IsChecked="{Binding Escaper_EscapePercent}"/>
                        </StackPanel>
                        <Button Grid.Column="3"
                                Content="Escape Sequence Legend"
                                Click="EscapeSequenceLegend_Click"/>
                    </Grid>

                    <Grid Grid.Row="2" Margin="10, 10, 10, 10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="22"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0"
                                   VerticalAlignment="Center"
                                   FontWeight="Bold"
                                   Text="Converted String">
                        </TextBlock>
                        <TextBox Grid.Row="1"
                                 FontFamily="{Binding MonoFontFamily}"
                                 FontWeight="{Binding MonoFontWeight}"
                                 FontSize="{Binding MonoFontSize}"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 VerticalContentAlignment="Stretch"
                                 ScrollViewer.HorizontalScrollBarVisibility="Auto"
                                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                                 ScrollViewer.CanContentScroll="True"
                                 IsReadOnly="True"
                                 Text="{Binding Escaper_ConvertedString}">
                        </TextBox>
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem Header="Syntax Checker">
                <Grid Margin="10, 10, 10, 10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="22"/>
                        <RowDefinition Height="25"/>
                        <RowDefinition Height="2*"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                               VerticalAlignment="Center"
                               FontWeight="Bold"
                               Text="Environment">
                    </TextBlock>
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="120"/>
                        </Grid.ColumnDefinitions>

                        <ComboBox Grid.Column="0"
                                  SelectedIndex="{Binding CodeBox_SelectedProjectIndex}"
                                  ItemsSource="{Binding CodeBox_Projects}">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Item1}"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                        
                        <Button Grid.Column="1"
                                Margin="10, 0, 0, 0"
                                Content="Syntax Check"
                                Click="SyntaxCheckButton_Click">
                        </Button>
                    </Grid>

                    <Grid Grid.Row="2" Margin="0, 10, 0, 0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="22"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0"
                                   VerticalAlignment="Center"
                                   FontWeight="Bold"
                                   Text="Input Code">
                        </TextBlock>
                        <TextBox Grid.Row="1"
                                 FontFamily="{Binding MonoFontFamily}"
                                 FontWeight="{Binding MonoFontWeight}"
                                 FontSize="{Binding MonoFontSize}"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 VerticalContentAlignment="Stretch"
                                 ScrollViewer.HorizontalScrollBarVisibility="Auto"
                                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                                 ScrollViewer.CanContentScroll="True"
                                 Text="{Binding Syntax_InputCode}">
                        </TextBox>
                    </Grid>

                    <Grid Grid.Row="3" Margin="0, 10, 0, 0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="22"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0"
                                   VerticalAlignment="Center"
                                   FontWeight="Bold"
                                   Text="Output">
                        </TextBlock>
                        <TextBox Grid.Row="1"
                                 FontFamily="{Binding MonoFontFamily}"
                                 FontWeight="{Binding MonoFontWeight}"
                                 FontSize="{Binding MonoFontSize}"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 VerticalContentAlignment="Stretch"
                                 ScrollViewer.HorizontalScrollBarVisibility="Auto"
                                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                                 ScrollViewer.CanContentScroll="True"
                                 IsReadOnly="True"
                                 Text="{Binding Syntax_Output}">
                        </TextBox>
                    </Grid>
                </Grid>
            </TabItem>
        </TabControl>
        <Grid Grid.Row="1" Margin="15, 15, 15, 15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="100"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Row="0" Grid.Column="1"
                    IsCancel="True"
                    Content="Close"
                    Click="CloseButton_Click">
            </Button>
        </Grid>
    </Grid>
</Window>
